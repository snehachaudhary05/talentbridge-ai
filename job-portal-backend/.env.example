# Django Settings
SECRET_KEY=your-secret-key-here
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database (Optional - default uses SQLite)
# DATABASE_URL=postgresql://user:password@localhost:5432/jobportal

# AI Provider Configuration
# Options: 'mock' (FREE, no API key), 'claude', 'openai'
AI_PROVIDER=mock  # Default: mock (100% FREE)

# API Keys (OPTIONAL - Only needed if using real AI)
# Leave these empty to use FREE mock AI
ANTHROPIC_API_KEY=
OPENAI_API_KEY=

# To use real AI, set one of these:
# ANTHROPIC_API_KEY=your-anthropic-api-key-here
# AI_PROVIDER=claude
#
# OR
#
# OPENAI_API_KEY=your-openai-api-key-here
# AI_PROVIDER=openai

# CORS Settings (for frontend)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080,http://localhost:5173

# Email Configuration (Resend)
RESEND_API_KEY=your-resend-api-key-here
EMAIL_FROM=noreply@yourdomain.com
EMAIL_FROM_NAME=TalentBridge AI
FRONTEND_URL=http://localhost:5173
